{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 1500,
  "height": 620,
  "projection": {"type": "mercator", "scale": 4000, "rotate": [250, -3.5]},
  "background": "#fdf0d5",
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/AbbiramiJegan/Homework-9/main/ne_110m_admin_0_countries.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/AbbiramiJegan/Data-Visualization-2/refs/heads/main/malaysia_states.topojson",
        "format": {"type": "topojson", "feature": "features"}
      },
      "mark": {"type": "geoshape", "fill": null, "stroke": "black"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/AbbiramiJegan/Data-Visualization-2/refs/heads/main/ne_110m_graticules_5.topojson",
        "format": {"type": "topojson", "feature": "graticules"}
      },
      "mark": {"type": "geoshape", "stroke": "black", "strokeWidth": 0.5}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/AbbiramiJegan/Homework-9/main/Crime%20Rates%20in%20Malaysia.csv"
      },
      "transform": [
        {"calculate": "toNumber(datum.Cases)", "as": "Cases"},
        {"calculate": "toNumber(datum.Latitude)", "as": "Latitude"},
        {"calculate": "toNumber(datum.Longtitude)", "as": "Longitude"}
      ],
      "mark": {
        "type": "square",
        "tooltip": {"content": "data"},
        "fontSize": 12,
        "baseline": "middle",
        "align": "center",
        "opacity": 0.5
      },
      "encoding": {
        "longitude": {"field": "Longitude", "type": "quantitative"},
        "latitude": {"field": "Latitude", "type": "quantitative"},
        "size": {
          "field": "Cases",
          "type": "quantitative",
          "title": "Number of cases",
          "scale": {"domain": [1, 200]},
          "legend": null
        },
        "tooltip": [
          {"field": "State", "type": "nominal", "title": "State"},
          {"field": "Cases", "type": "quantitative", "title": "Cases"}
        ]
      }
    },
    {
      "data": {
        "values": [
          {
            "longitude": 108.5,
            "latitude": 6.5,
            "text": "From January to September 2020, Selangor and Kuala Lumpur"
          }
        ]
      },
      "mark": {"type": "text", "fontSize": 18, "color": "black"},
      "encoding": {
        "longitude": {"field": "longitude", "type": "quantitative"},
        "latitude": {"field": "latitude", "type": "quantitative"},
        "text": {"field": "text"}
      }
    },
    {
      "data": {
        "values": [
          {
            "longitude": 108.5,
            "latitude": 5.9,
            "text": "reported the highest losses and case counts, totaling"
          }
        ]
      },
      "mark": {"type": "text", "fontSize": 18, "color": "black"},
      "encoding": {
        "longitude": {"field": "longitude", "type": "quantitative"},
        "latitude": {"field": "latitude", "type": "quantitative"},
        "text": {"field": "text"}
      }
    },
    {
      "data": {
        "values": [
          {
            "longitude": 108.5,
            "latitude": 5.3,
            "text": "RM256,863,878.35 (5,128 cases)."
          }
        ]
      },
      "mark": {"type": "text", "fontSize": 18, "color": "black"},
      "encoding": {
        "longitude": {"field": "longitude", "type": "quantitative"},
        "latitude": {"field": "latitude", "type": "quantitative"},
        "text": {"field": "text"}
      }
    },
    {
      "data": {
        "values": [
          {
            "longitude": 116,
